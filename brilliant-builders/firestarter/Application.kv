    Screen:
        size: root.size
        name: "game"
        FloatLayout:
            id: background
            Image:
                size_hint: 1, 1
                keep_ratio: False
                allow_stretch: True
                canvas.before:
                    Color:
                        rgb: 1,1,1
                    Rectangle:
                        size: self.size
                        pos: self.pos
                source: 'Picture/background.png'
            Image:
                source: 'Picture/mountains_2.png'
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                keep_ratio: False
                allow_stretch: True
                size_hint: 1.3, 1
            Dino1:
                id: dino1
                pos: -120, -20
            Dino:
                id: dino
                pos: -30 , -10
            Image:
                size_hint: 1.2, 0.6
                pos_hint: {'x': 0, 'y': 0}
                keep_ratio: False
                allow_stretch: True
                source: "Picture/forest.png"
            Image:
                size_hint: 1, 1
                source: "Picture/sun.png"
                allow_stretch: True
                keep_ratio: False
            Image:
                size_hint: 0.5, 0.5
                pos_hint: {'center_x': 0.2, 'center_y': 0.8}
                keep_ratio: False
                allow_stretch: True
                source: "Picture/clouds.png"
            Image:
                size_hint: 0.5, 0.5
                pos_hint: {'center_x': 0.75, 'center_y': 0.8}
                keep_ratio: False
                allow_stretch: True
                source: "Picture/clouds.png"
            Image:
                source: "Picture/grass_platform.png"
                pos_hint: {'center_x': 0.5, 'center_y': 0.3}
                keep_ratio: False
                allow_stretch: True
                size_hint: 1, 0.6
            Image:
                source: "Picture/cloud_platform_2.png"
                keep_ratio: True
                allow_stretch: True
                pos_hint: {'center_x': 0.5, 'top': 0.93}
